{% trans_default_domain 'FOSUserBundle' %}
<div class="paper-block">

    <form action="{{ path('fos_user_profile_edit') }}" method="POST" class="fos_user_profile_edit col-md-12">
        {{ form_errors(form) }}

        <div class="row mb-2">
            <div class="input-group col-md-6">
                {{ form_errors(form.username) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-user"></span></div>
                </div>
                {{ form_widget(form.username,  { 'attr': {'class': 'form-control', 'placeholder': 'form.username' }}) }}
            </div>

            <div class="input-group col-md-6">
                {{ form_errors(form.firstname) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-user"></span></div>
                </div>
                {{ form_widget(form.firstname,  { 'attr': {'class': 'form-control', 'placeholder': 'form.firstname' }}) }}
            </div>
        </div>

        <div class="row mb-2">
            <div class="input-group col-md-6">
                {{ form_errors(form.lastname) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-user"></span></div>
                </div>
                {{ form_widget(form.lastname,  { 'attr': {'class': 'form-control', 'placeholder': 'form.lastname' }}) }}
            </div>

            <div class="input-group col-md-6">
                {{ form_errors(form.website) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-user"></span></div>
                </div>
                {{ form_widget(form.website,  { 'attr': {'class': 'form-control', 'placeholder': 'form.website' }}) }}
            </div>
        </div>

        <div class="row mb-2">
            <div class="input-group col-md-6">
                {{ form_errors(form.phone) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-phone"></span></div>
                </div>
                {{ form_widget(form.phone,  { 'attr': {'class': 'form-control', 'placeholder': 'Telefon' }}) }}
            </div>

            <div class="input-group col-md-6">
                {{ form_errors(form.gender) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-intersex"></span></div>
                </div>
                {{ form_widget(form.gender,  { 'attr': {'class': 'form-control', 'placeholder': 'Płeć' }}) }}
            </div>
        </div>

        <div class="row mb-2">
            <div class="input-group col-md-6">
                {{ form_errors(form.email) }}
                <div class="input-group-prepend">
                    <div class="input-group-text">@</div>
                </div>
                {{ form_widget(form.email,  { 'attr': {'class': 'form-control', 'placeholder': 'form.email' }}) }}
            </div>

            <div class="input-group col-md-6">
                {{ form_errors(form.current_password) }}
                <div class="input-group-prepend">
                    <div class="input-group-text"><span class="icon-lock"></span></div>
                </div>
                {{ form_widget(form.current_password,  { 'attr': {'class': 'form-control', 'placeholder': 'form.current_password' }}) }}
            </div>
        </div>

        <div class="row mb-2">

            <div class="input-group col-md-12">
                {{ form_errors(form.biography) }}
                {{ form_widget(form.biography,  { 'attr': {'class': 'form-control', 'placeholder': 'form.biography' }}) }}
            </div>

        </div>

        {{ form_rest(form) }}

        <input type="submit" class="btn btn-block btn-success btn-lg" value="{{ 'profile.edit.submit'|trans({}, 'FOSUserBundle') }}" />
    </form>

    <div class="col-md-2">
    </div>
</div>